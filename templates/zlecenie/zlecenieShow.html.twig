{% extends 'base.html.twig' %}

{% block title %}Podgląd zlecenia{% endblock %}

{% block body %}
    <main class="container">
        <h1 class="mb-4 text-center fw-bold">Podgląd zlecenia</h1>

        <div class="mb-3">
            <label class="form-label fw-bold">Imię i nazwisko:</label>
            <p>{{ zlecenie.imieNazwisko }}</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Email:</label>
            <p>{{ zlecenie.email }}</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Numer telefonu:</label>
            <p>{{ zlecenie.numerTel }}</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Opis:</label>
            <p>{{ zlecenie.content }}</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Status:</label>
            <p>{{ zlecenie.status }}</p>
        </div>

        <p class="mt-3 text-center">
            <a href="{{ path('zlecenie_option') }}" class="btn btn-secondary">Wróć do listy zleceń</a>
            <a href="{{ path('list') }}" class="btn btn-secondary">Wróć do strony głównej</a>
        </p>
    </main>
{% endblock %}
