{% extends 'base.html.twig' %}

{% block title %}Zlecenie{% endblock %}

{% block body  %}

<main class="container py-4" style="max-width: 600px;">
    <h1 class="mb-4 text-center fw-bold">Zlecenie</h1>

    <form method="post" action="{{ path('zlecenie') }}">
        <div class="mb-3">
            <label for="imie_nazwisko" class="form-label">Imię i nazwisko</label>
            <input type="text" class="form-control" id="imie_nazwisko" name="imie_nazwisko" placeholder="Jan Kowalski" required />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Twój adres email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="twoj.email@przyklad.pl" required />
        </div>

        <div class="mb-3">
            <label for="numer_tel" class="form-label">Twój numer telefonu</label>
            <input type="tel" class="form-control" id="numer_tel" name="numer_tel" placeholder="123 456 789" required />
        </div>

        <div class="mb-4">
            <label for="content" class="form-label">Opis zlecenia</label>
            <textarea class="form-control" id="content" name="content" rows="5" placeholder="Potrzebuję strony internetowej..." required></textarea>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-grow-1">Wyślij</button>
            <a href="{{ path('list') }}" class="btn btn-secondary flex-grow-1 text-center text-decoration-none">Wróć</a>
        </div>
    </form>
</main>

{% endblock %}


