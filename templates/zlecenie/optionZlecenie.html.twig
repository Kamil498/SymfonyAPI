{% extends 'base.html.twig' %}

{% block title %}Zlecenia{% endblock %}

{% block body %}
<main class="container py-4">
    <h2 class="mb-4 text-center fw-bold">Lista</h2>

    <ul class="list-group" style="max-width: 600px; margin: 0 auto;">
        {% for zlecenie in zlecenie %}

            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ zlecenie.imieNazwisko }}
                <a href="{{ path('zlecenie_show', {'id': zlecenie.id}) }}">Podgląd zlecenia</a>
            </li>
        {% endfor %}
    </ul>
    <p class="mt-3 text-center">
        <a href="{{ path('zlecenie') }}" class="btn btn-primary">Dodaj nowe zlecenie</a>
        <a href="{{ path('list') }}" class="btn btn-secondary">Wróć do strony głównej</a>
    </p>
</main>

{% endblock %}
