{% extends 'base.html.twig' %}

{% block title %}Lista kontaktów{% endblock %}

{% block body %}
    <a href="{{ path('list') }}">Wróć do strony głównej</a>
    <br><br>
    <a href="{{ path('kontakt') }}">Dodaj nowy kontakt</a>

    <h2>Lista kontaktów</h2>
    <ul class="list-group" >

        {% for kontakt in kontakty %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ kontakt.email }}
                <a href="{{ path('kontakt_update', {'id': kontakt.id}) }}">Zmień</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
