{% extends 'base.html.twig' %}

{% block title %}Dodaj kontakt{% endblock %}

{% block body %}
    <main class="container py-4">
        <h1 class="mb-4 text-center fw-bold">Dodaj do sekcji kontakt</h1>

        <form method="post" action="{{ path('kontakt') }}">
            <div class="mb-3">
                <label for="numerTel" class="form-label">Numer telefonu</label>
                <input name="numerTel" type="number" class="form-control" id="numerTel" placeholder="123456789" required />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email" class="form-control" id="email" placeholder="example@mail.com" required />
            </div>

            <div class="mb-4">
                <label for="adres" class="form-label">Adres</label>
                <input name="adres" type="text" class="form-control" id="adres" placeholder="Ul. Przykładowa 10, Miasto" required />
            </div>

                <button type="submit" class="btn btn-primary w-100">Dodaj</button>

        </form>

        <p class="mt-3 text-center">
            <a href="{{ path('kontakt_option') }}" class="btn btn-secondary">Wróć do listy kontaktów</a>
            <a href="{{ path('list') }}" class="btn btn-secondary">Wróć do strony głównej</a>
        </p>
    </main>
{% endblock %}

