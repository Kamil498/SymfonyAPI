{% extends 'base.html.twig' %}

    {% block title %}Oferta{% endblock %}


{% block body %}
<main class="container py-4">

    <h2 class="mb-4 text-center fw-bold">Lista</h2>

    <ul class="list-group" style="max-width: 600px; margin: 0 auto;">
        {% for oferta in oferts %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{ oferta.tytul }}
            <a href="{{ path('oferta_update', {'id': oferta.id}) }}" class="btn btn-sm btn-outline-primary">Zmień</a>
        </li>
        {% endfor %}
    </ul>
    <p class="mt-3 text-center">
        <a href="{{ path('main') }}" class="btn btn-primary">Dodaj nową oferte</a>
        <a href="{{ path('list') }}" class="btn btn-secondary">Wróć do strony głównej</a>
    </p>
</main>

{% endblock %}

