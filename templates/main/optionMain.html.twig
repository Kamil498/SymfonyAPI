{% extends 'base.html.twig' %}

{% block title %}Main{% endblock %}

{% block body %}
    <main class="container py-4">

        <h2 class="mb-4 text-center fw-bold">Lista</h2>

        <ul class="list-group" style="max-width: 600px; margin: 0 auto;">
            {% for item in main %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ item.dziedzinaOne }}
                    <a href="{{ path('main_update', {'id': item.id}) }}" class="btn btn-sm btn-outline-primary">Zmień</a>
                </li>
            {% endfor %}
        </ul>

        <p class="mt-3 text-center">
            <a href="{{ path('main') }}" class="btn btn-primary">Dodaj nowy wpis</a>
            <a href="{{ path('list') }}" class="btn btn-secondary">Wróć do strony głównej</a>
        </p>
    </main>
{% endblock %}
