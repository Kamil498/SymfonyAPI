{% extends 'base.html.twig' %}

{% block title %}Edycja main{% endblock %}

{% block body %}
<main class="container">
    <h1 class="mb-4 text-center fw-bold">Zmień dane w sekcji "main"</h1>

    <form method="post" action="{{ path('main_update', {'id': main.id}) }}" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="dziedzina_one" class="form-label">Dziedzina 1</label>
            <input name="dziedzina_one" type="text" class="form-control" id="dziedzina_one" required value="{{ main.dziedzinaOne }}">
        </div>

        <div class="mb-3">
            <label for="dziedzina_two" class="form-label">Dziedzina 2</label>
            <input name="dziedzina_two" type="text" class="form-control" id="dziedzina_two" required value="{{ main.dziedzinaTwo }}">
        </div>

        <div class="mb-3">
            <label for="wojewodztwo" class="form-label">Województwo</label>
            <input name="wojewodztwo" type="text" class="form-control" id="wojewodztwo" required value="{{ main.wojewodztwo }}">
        </div>

        <div class="mb-3">
            <label for="logo" class="form-label">Logo</label>
            <input name="logo" type="file" class="form-control" id="logo">
            {% if main.logo %}
                <small>Aktualny plik: {{ main.logo }}</small>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="tlo" class="form-label">Tło</label>
            <input name="tlo" type="file" class="form-control" id="tlo">
            {% if main.tlo %}
                <small>Aktualny plik: {{ main.tlo }}</small>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary w-100">Zmień</button>
    </form>


    <p class="mt-3 text-center">
        <a href="{{ path('main_option') }}" class="btn btn-secondary">Wróć do listy "Main"</a>
        <a href="{{ path('list') }}" class="btn btn-secondary">Wróć do strony głównej</a>
    </p>
</main>
{% endblock %}

